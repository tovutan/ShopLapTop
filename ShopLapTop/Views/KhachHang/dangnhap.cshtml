
@{
    ViewBag.Title = "dangnhap";
    Layout = "~/Views/Shared/_KhachhangLayout.cshtml";
}

<div class="dangnhap">
    @using (Html.BeginForm("dangnhap", "KhachHang", FormMethod.Post, new { @id = "loginForm" }))
    {
       @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        <fieldset id="body">
            <fieldset>
                <label for="email">Email Address</label>
                <input type="text" name="Email" id="email">
                @Html.ValidationMessage("Email")
            </fieldset>
            <fieldset>
                <label for="password">Password</label>
                <input type="password" name="Password" id="password">
                @Html.ValidationMessage("Password")
                <input type="hidden" name="Path" value="@ViewBag.path" />
            </fieldset>
            <input type="submit" id="login" value="Đăng nhập">
            @*<label for="checkbox"><input type="checkbox" id="checkbox"> <i>Remember me</i></label>*@
        </fieldset>
        @*<span><a href="#">Quên mật khẩu?</a></span>*@
    }
</div>

